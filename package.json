{
   "name": "graphql-server-boilerplate",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/jest": "^24.0.23",
      "@types/node": "^12.12.11",
      "@types/uuid": "^3.4.6",
      "gql2ts": "^1.10.1",
      "husky": "^3.1.0",
      "jest": "^24.9.0",
      "lint-staged": "^9.4.3",
      "nodemon": "^2.0.1",
      "npm-run-all": "^4.1.5",
      "prettier": "^1.19.1",
      "ts-jest": "^24.2.0",
      "ts-node": "8.5.2",
      "tslint": "^5.20.1",
      "tslint-config-prettier": "^1.18.0",
      "typescript": "3.7.2"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "graphql-import": "^0.7.1",
      "graphql-request": "^1.8.2",
      "graphql-tools": "^4.0.6",
      "graphql-yoga": "^1.18.3",
      "pg": "^7.14.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.20",
      "uuid": "^3.3.3"
   },
   "scripts": {
      "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
      "gen-schema-types": "gql2ts src/schema.graphql -o src/types/graphql.d.ts",
      "pretty:all": "prettier --write \"./src/**/*.{js,jsx,ts,tsx}\" && npm run lint -- --fix",
      "lint": "tslint --project tsconfig.json --config tslint.json",
      "check-types": "tsc",
      "test": "NODE_ENV=test jest",
      "test-server": "NODE_ENV=test ts-node src/index.ts"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged"
      }
   },
   "lint-staged": {
      "*.{ts,tsx}": [
         "prettier --write",
         "tslint --config tslint.json --fix",
         "git add"
      ]
   }
}
